{
    "dockerFile": "./Dockerfile",
    "remoteUser": "node",
    "customizations": {
        "vscode": {
            "extensions": [
                "dbaeumer.vscode-eslint"
            ],
            "settings": {}
        }
    },
    "mounts": [
        "source=${localEnv:HOME}${localEnv:USERPROFILE}/.ssh,target=/home/node/.ssh,readonly,type=bind"
    ],
    "runArgs": [
        "--privileged", // maybe required to USB access, maybe not?
        "--network=host" // so we can access the ADB server running on the host
    ],
    "initializeCommand": "adb devices || true", // make sure the adb server is running on the host before the container starts
    "postAttachCommand": {
        "accept_licenses": "yes | sdkmanager --licenses",
        "npm_install": "npm i --silent"
    } // required for the Frida extension
}
